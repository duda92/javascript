<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Css/Styles.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.19.custom.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>
    <link href= "@Url.Content("~/Scripts/niceforms-default.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    <script language="javascript" type="text/javascript">
        $(document).ready(function () {
            if (typeof PageScript == 'function') {
                PageScript();
            }
        });
    </script>
    <div class="page">
        <header id="header">
            <div id="title">
                <h1>
                    Yidalnya</h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <br />
            <nav>
                <ul id="navlist">
                    <li>@Html.ActionLink("Главная", "Index", "Home")</li>
                    <li>@Html.ActionLink("Баланс", "Index", "Balance")</li>
                    <li>@Html.ActionLink("Информация о пользователе", "GetMyInfo", "Home")</li>
                    <li>@Html.ActionLink("Меню", "User", "Propositions")</li>
                    @if (this.User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Управление меню", "Admin", "Propositions")</li>
                        <li>@Html.ActionLink("Операции со счётом", "AdminOperations", "Balance")</li>
                        <li>@Html.ActionLink("Заказы", "OrdersAccounting", "Orders")</li>
                    }
                </ul>
            </nav>
        </header>
        <section>
            <div id="main">
                @RenderBody()
            </div>
        </section>
        <footer>
            <small>All rights reserved. ©Copyright @DateTime.Now.Year, DataArt Corp.</small>
        </footer>
    </div>
</body>
</html>